// }}} END New Note

// Notes {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#note-controls
  .control-title
    font-weight bold
    color darken(gray, 50%)
    padding-right 5px

.no-records
  text-align center
  margin-top 50px
  h4
    font-size 24px
    font-weight 500
    margin-bottom 20px
  .hl
    background tint(yellow, 70%)
    padding 0 5px
.hidden
  display none

ul.table
  display table
  width 100%
  border-spacing 0px
li.cell
  display table-cell
  vertical-align top
  margin 0
  padding 0

note-base()
  border 1px solid gray
  margin-bottom 5px
  position relative
  button
    outline none
    appearance none
    border none
    padding 0
    margin 0
    height 100%
    background darken(gray, 5%)
    &.delete
      &:hover
        background red
        color white
    &.view
    &.restore
    &.archive
      &:hover
        background blue
        color white

  .button-cell
    text-align right
    button
      width 26px
      height 26px
  .note-cell
    width 80%
  .date-cell
    padding-left 10px
    p
      color darken(gray, 20%)
      text-align right
      padding-right 10px

  // The textarea for editing text
  .text-edit
    outline none
    max-width 100%
    min-width 100%
    width 100%
    resize none
  .transition
    transition all 0.2s ease-out
  p
    margin-bottom 0

// Open, editting state
.note.editting
  .text-edit
    display block
  .note-cell
    box-shadow inset 0px 0px 2px darken(white, 20%)
    input
      width 100%
      display inline-block
      background transparent
  .text
    display none

.note
  note-base()
  &:before
    note-color = tint(blue, 70%)
    content ''
    display block
    absolute left -1px top -1px
    height 100%
    width 5px
    background note-color
    border 1px solid note-color // Compensate for the parent border
  .text, .text-edit
    font-family $font
    font-weight normal
    font-size 18px
    line-height 1.4
    border none
    padding-left 15px // Account for 5px abs pos border


// }}} END Notes

// Archived Notes {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

.note.archived
  @extend .note
  &:before
    note-color = darken(gray, 10%)
    background note-color
    border 1px solid note-color // Compensate for the parent border
  .date-cell
    padding-left 0

// }}} END Archived Notes

// Power Notes {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

#power-notes
  margin-bottom 50px
  margin-right 0
  margin-left auto
  width 98.6% // Account for abs positioned border on power notes

outer-border(color)
  position relative
  &:before
    content ''
    absolute left -10px top 0
    height 100%
    width 5px
    background color
#actions
  outer-border(shade(orange, 20%))
  margin-bottom 25px
#questions
  outer-border(shade(blue, 30%))

.power-note
  note-base()
  background lighten(gray, 30%)
  border 1px solid darken(gray, 20%)
  &:before
    display none
  &.action
    .token-cell
      background tint(orange, 60%)
      border-right 1px solid shade(orange, 20%)
      p
        color shade(orange, 20%)
  &.question
    .token-cell
      background tint(blue, 60%)
      border-right 1px solid shade(blue, 30%)
      p
        color shade(blue, 30%)
  .token-cell
    width 52px
    p
      line-height 52px
      text-align center
      color white
      font-size 32px
  li.note-cell
    padding 15px
    width 70%
  .text, .text-edit
    font-family $font
    font-weight normal
    font-size 18px
    line-height 1.4
    border none
    background lighten(gray, 30%)
  .button-cell
    width 26px
    .archive
    .restore
      border-left 1px solid darken(gray, 20%)
      border-bottom 1px solid darken(gray, 20%)
    .delete
      border-bottom 1px solid darken(gray, 20%)

.power-note.archived
  @extend .power-note
  &.action
  &.question
    .token-cell
      background darken(gray, 5%)
      border-right 1px solid darken(gray, 20%)
      p
        color lighten(black, 50%)

// }}} END Power Notes

// Clients {{{
