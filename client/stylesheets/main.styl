// New Note {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

super-input()
  margin-bottom 30px
  position relative
  i
    color darken(light-gray, 20%)
    font-size 26px
    position absolute
    left 10px
    top 8px
  input
  textarea
    width 100%
    padding 5px 8px
    font-family $font
    padding-left 45px
