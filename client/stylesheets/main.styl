  border-radius 3px
  border 1px solid darken(gray, 10%)
  box-shadow 0 2px 3px rgba(0, 0, 0, 0.5)
  .title-bar
    background gray
    text-align center
    background linear-gradient(top, gray, #d4d4d4)
    border-bottom 1px solid darken(gray, 20%)
    p
      line-height 28px
      font-size 15px
      font-weight bold
      color #797979
      margin 0

.right
  float right
.left
  float left

#main-wrapper
  padding-top 0
  margin-top 0
  padding-bottom 50px

section
  margin-bottom 50px
  margin-top 50px

.slim
  max-width 600px
  margin 0 auto

button
input[type=submit]
  cursor pointer

li
  list-style none

p
  strong
    font-weight bold
  em
    font-style italic

.red
  color red

.markdown
  li
    list-style disc
    font-size 18px
    line-height 1.5
    margin-left 30px
    color black

.no-pad
  padding-left 8px !important

// }}} END General

